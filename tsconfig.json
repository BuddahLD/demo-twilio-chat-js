{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "removeComments": false,
        "noImplicitAny": false,
        "lib": ["es6", "es2016.array.include"],
        "types" : [ "node", "express" ],
        "resolveJsonModule": true,
        "rootDir": ".",
        "outDir": "dist/",
        "baseUrl": "./"
    },
    "files": ["./api/index.ts", "./bin/server.ts"],
    "include": [
		"./**/*"
	]
}
